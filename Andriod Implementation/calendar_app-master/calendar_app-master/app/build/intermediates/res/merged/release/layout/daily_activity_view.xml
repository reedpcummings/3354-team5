<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListViewActivity"
    android:background="@mipmap/blueback">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALENDAR APP"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/list_event_button"

            android:background="#00000000"
            android:src="@mipmap/list"
            android:clickable="true"
            android:onClick="onClick" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/calendar_event_button"
            android:src="@mipmap/monthpic"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/weekly_view_button"
            android:src="@mipmap/weekpic"
            android:background="#00000000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/daily_view_button"
            android:background="#00000000"
            android:src="@mipmap/calendaricon" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />





        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/add_event_button"
            android:background="#00000000"
            android:src="@mipmap/addicon"
            android:clickable="true"
            android:onClick="onClick" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        #other buttons TODO

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Events for Today!"
        android:id="@+id/no_events_text_view"
        android:gravity="center"
        android:layout_marginTop="25dp" />

    <ListView
        android:id="@+id/list_view_daily"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:background="#00000000"
        android:clickable="true"
        android:contextClickable="false">
    </ListView>


</LinearLayout><!-- From: file:/F:/Dropbox/calendar_app/app/src/main/res/layout/daily_activity_view.xml -->