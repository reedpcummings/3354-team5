            <action android:name="android.intent.action.VIEW" />
        </intent-filter>
    </activity>

    <activity
        android:name=".dailyActivityView"
        android:label="@string/app_name" >
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />
        </intent-filter>
    </activity>

    <activity
        android:name=".updateOverview"
        android:label="@string/app_name" >
